<h2>Movie</h2>
<ul class="list-group">
  <h3><%= @list.name %></h3>
  <% @list.movies.each do |movie| %>
    <h4 class="list-group-item"><%= movie.title %></h4>
    <li class="list-group-item">Rating: <%= movie.rating %></li>
    <% bookmark = Bookmark.find_by(movie: movie, list: @list) %>
    <li class="list-group-item">
      <%= link_to "Remove",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item">Comment: <%= bookmark.comment %></li>
  <% end %>
</ul>
<%= link_to "Add a movie", new_list_bookmark_path(@list) %><br>
<%= link_to "Back to list", lists_path %>