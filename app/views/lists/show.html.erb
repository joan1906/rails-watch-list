<h2>Movie</h2>

<ul>
    <% @bookmarks.each do |bookmark| %>
        <li>Rating: <%= bookmark.movie.title %></li>
        <li>Rating: <%= bookmark.movie.rating %></li>
        <li>Comment: <%= bookmark.comment %><br>
        <%= link_to "Remove",
                    bookmark_path(bookmark),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
        </li>
    <% end %>
</ul>

<%= link_to "Add a movie", new_list_bookmark_path(@list) %><br>
<%= link_to "Back to list", lists_path %>